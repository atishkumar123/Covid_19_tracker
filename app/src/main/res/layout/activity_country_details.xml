<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".countryDetails_Activity"
    android:background="#FBFAFA">


   <androidx.cardview.widget.CardView
       android:id="@+id/containCountryImage"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       app:cardElevation="10dp"
       app:cardCornerRadius="5dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/countryImage"
               android:layout_width="100dp"
               android:layout_height="80dp"
               android:layout_gravity="center"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="35dp"

               />
           <TextView
               android:id="@+id/countryNameTrack"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_alignParentRight="true"
               android:hint="countryName"
               android:textStyle="bold"
               android:textSize="28dp"
               android:gravity="center_vertical"
               android:layout_marginRight="35dp"/>

       </RelativeLayout>



   </androidx.cardview.widget.CardView>



          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/containCountryImage"
              android:layout_above="@+id/btn_State_traker"
              android:layout_marginTop="10dp">


            <ScrollView
                android:id="@+id/scroll_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <androidx.cardview.widget.CardView
                           android:layout_width="200dp"
                           android:layout_height="200dp"
                           app:cardElevation="30dp"
                           app:cardCornerRadius="10dp"
                           android:layout_weight="1"
                           android:layout_marginRight="10dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="20dp"

                           >
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical">


                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="10dp"

                                   android:layout_weight="1"
                                   android:fontFamily="@font/aladin"
                                   android:gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Affected"
                                   android:textSize="28dp"
                                   android:textStyle="bold"
                                   android:textColor="@color/Total_color"/>

                               <TextView
                                   android:id="@+id/con_total_case"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:text="00000"
                                   android:gravity="center_horizontal"
                                   android:textSize="28dp"
                                   android:textStyle="bold"
                                   android:textColor="@color/death_color"/>

                           </LinearLayout>



                       </androidx.cardview.widget.CardView>
                       <androidx.cardview.widget.CardView
                           android:layout_width="200dp"
                           android:layout_height="200dp"
                           app:cardElevation="30dp"
                           app:cardCornerRadius="10dp"
                           android:layout_weight="1"
                           android:layout_marginRight="20dp"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_marginLeft="10dp"
                           android:background="#43A047"
                           >
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="vertical">


                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginTop="10dp"

                                   android:layout_weight="1"
                                   android:fontFamily="@font/aladin"
                                   android:gravity="center"
                                   android:paddingTop="5dp"
                                   android:text="Death"
                                   android:textSize="28dp"
                                   android:textStyle="bold"
                                   android:textColor="@color/colorAccent"/>

                               <TextView
                                  android:id="@+id/con_total_death"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:text="00000"
                                   android:gravity="center_horizontal"
                                   android:textSize="28dp"
                                   android:textStyle="bold"
                                   android:textColor="@color/death_color"/>

                           </LinearLayout>



                       </androidx.cardview.widget.CardView>
                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Recovered"
                                    android:textColor="@color/recover_color"
                                    android:textSize="28dp"
                                    android:textStyle="bold" />

                                <TextView

                                    android:id="@+id/con_recovered"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Active"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="#8E24AA"/>

                                <TextView
                                    android:id="@+id/con_active"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Today      Case"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="#B36632"/>

                                <TextView
                                    android:id="@+id/con_today_case"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Today     Death"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="#00ACC1"/>

                                <TextView
                                    android:id="@+id/con_today_death"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView

                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Today Recovered"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="#7CB342"/>

                                <TextView
                                    android:id="@+id/con_today_recovered"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView

                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardElevation="30dp"
                            app:cardCornerRadius="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#43A047"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/aladin"
                                    android:gravity="center"
                                    android:paddingTop="5dp"
                                    android:text="Critical"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="#C0CA33"/>

                                <TextView
                                    android:id="@+id/con_critical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="00000"
                                    android:gravity="center_horizontal"
                                    android:textSize="28dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/death_color"/>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>





                </LinearLayout>

            </ScrollView>

</RelativeLayout>





    <Button
        android:id="@+id/btn_State_traker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="#E53935"
        android:text="track state"
        android:textSize="18dp"
        android:textColor="#fff"
        android:padding="5dp"
        android:onClick="goTrackState"
        android:visibility="gone"
        />

</RelativeLayout>