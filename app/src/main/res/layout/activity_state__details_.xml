<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/state_detail_toolbar"
            layout="@layout/toolbar_layout" />

        <com.miguelcatalan.materialsearchview.MaterialSearchView
            android:id="@+id/state_detail_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/state_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_container"
        android:orientation="vertical"
        android:background="#fff">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Total Cases...."
            android:textColor="#D50000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/state_detail_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            app:cardBackgroundColor="#B52828"
            app:cardCornerRadius="20dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FDFDFD"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/aladin"
                                android:gravity="center"
                                android:paddingTop="10dp"

                                android:text="Confirmed"
                                android:textColor="#DD2C00"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/state_daily_case"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="10dp"
                                android:text="[+00 ]"
                                android:textColor="#EC6644"
                                android:textSize="25dp" />

                            <TextView
                                android:id="@+id/state_total_case"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="00000"
                                android:textColor="#D56043"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FDFDFD"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/aladin"
                                android:gravity="center"
                                android:paddingTop="10dp"

                                android:text="Death"
                                android:textColor="@color/colorAccent"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/state_daily_death"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="10dp"
                                android:text="[+00 ]"
                                android:textColor="#43BCB0"
                                android:textSize="25dp" />

                            <TextView
                                android:id="@+id/state_total_death"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="00000"
                                android:textColor="#3BCDBF"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FDFDFD"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/aladin"
                                android:gravity="center"
                                android:paddingTop="10dp"

                                android:text="Recovered"
                                android:textColor="@color/recover_color"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/state_daily_recovered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:paddingTop="10dp"
                                android:text="[+00 ]"
                                android:textColor="#2B9F93"
                                android:textSize="25dp" />

                            <TextView

                                android:id="@+id/state_total_recovered"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="00000"
                                android:textColor="#1FAFA1"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FDFDFD"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/aladin"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:text="Active"
                                android:textColor="@color/Active_color"
                                android:textSize="28dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/state_active"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="00000"
                                android:textColor="#388AB3"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state_data_layout"
        android:layout_margin="15dp"
        android:text="Select A District...."
        android:textColor="#D50000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#fff"/>


    <ListView
        android:id="@+id/district_name_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:nestedScrollingEnabled="true" />


</RelativeLayout>